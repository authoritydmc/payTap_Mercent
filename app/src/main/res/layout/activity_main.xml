<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="PayTap Mercent"
       android:id="@+id/text"
       android:textSize="40sp"/>
   <ListView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:layout_weight="9"
       android:id="@+id/lstViewItems">

   </ListView>
   <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       android:id="@+id/txtView_DetailsItem"
      android:text="Total Item  and Price "
      android:textSize="25sp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:gravity="center_horizontal">
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/Btn_ScanCode"
       android:text="Scan the item"
       android:layout_gravity="bottom|center"
       />
   <Button
       android:layout_marginStart="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/Btn_writePrice"
       android:text="Done!Write To NFC"
       android:layout_gravity="bottom|center"
       />
</LinearLayout>


</LinearLayout>